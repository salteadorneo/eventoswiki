---
import { PiCalendar, PiChalkboard } from 'react-icons/pi'

import { Urls } from '@ui/urls/urls'
import { Link } from '../common/link.component.tsx'

const pathname = Astro.url.pathname

const urlSections = {
  EVENTS: '/evento',
  CALENDAR: '/calendario',
}
---

<nav class="desktop-menu">
  <ul class="menu-list">
    <li><Link selected={pathname.includes(urlSections.EVENTS)} href={Urls.EVENTS(1)}>Eventos</Link></li>
    <!-- <li><Link href="/">Meetups</Link></li> -->
    <li><Link selected={pathname.includes(urlSections.CALENDAR)} href={Urls.CALENDAR}>Calendario</Link></li>
  </ul>
</nav>

<nav class="mobile-menu">
  <ul class="menu-list">
    <li>
      <Link selected={pathname.includes(urlSections.EVENTS)} className="mobile-link" href={Urls.EVENTS(1)}>
        <PiChalkboard className="link-icon" />Eventos
      </Link>
    </li>
    <!-- <li><Link linkClass="mobile-link" href="/"><PiUsersFour className="link-icon" />Meetups</Link></li> -->
    <li>
      <Link selected={pathname.includes(urlSections.CALENDAR)} className="mobile-link" href={Urls.CALENDAR}>
        <PiCalendar className="link-icon" />Calendario
      </Link>
    </li>
  </ul>
</nav>

<style>
  .desktop-menu {
    @apply hidden flex-1 p-4 md:block;

    .menu-list {
      @apply mx-auto flex w-full justify-center;
    }
  }

  .mobile-menu {
    @apply fixed bottom-0 left-0 z-20 h-min w-full border bg-accent pb-6 pt-4 text-accent-foreground md:hidden;

    .menu-list {
      @apply flex flex-row justify-around;

      .mobile-link {
        @apply grid grid-rows-2 place-content-center place-items-center gap-4 text-sm font-medium;
      }

      .link-icon {
        @apply text-xl;
      }
    }
  }
</style>
