---
import BaseHead from '@/shared/ui/components/layout/base-head.astro'
import Header from '@/shared/ui/components/layout/header.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} />
  </head>
  <body>
    <Header />
    <slot />
    <style>
      body {
        @apply pb-24 md:pb-4;
      }
    </style>
  </body>
</html>
